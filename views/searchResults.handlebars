{{! searchResults.handlebars }}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header class="bg-gray-900 text-white py-4 px-6 flex justify-between items-center">
        <div></div>
        <div>
            {{> login_logout_button }}
            {{> signup_button }}
        </div>
    </header>
    <div class="container mx-auto mt-8">
        <div class="flex flex-col items-center">
            <h1 class="text-2xl mb-4">Search Results for "{{searchQuery}}"</h1>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-8">
                {{#each games}}
                <a href="/games/{{this.id}}" class="bg-gray-900 p-2 shadow-md rounded-lg flex flex-col items-center justify-center">
                    <img src="{{this.cover_art}}" alt="Image of {{this.title}}" class="w-16 h-16 object-cover mb-2" />
                    <span class="text-center text-sm">{{this.title}}</span>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</body>
</html>
