<a
  href="/"
  class="text-white px-4 py-2 border border-gray-300 absolute top-4 left-8"
>Home</a>

<div class="min-h-screen flex flex-col items-center justify-center">
  <!-- Logo Image -->
  <img src="/assets/images/FindMyDuo_Logo.png" alt="Logo" class="h-64 mb-8" />

  <!-- Login Form -->
  <form
    class="w-full max-w-sm p-6 bg-gray-100 rounded-lg text-black shadow-md login-form"
  >
    <div class="mb-4">
      <label
        for="email-login"
        class="block text-gray-700 font-bold mb-2"
      >Email:</label>
      <input
        class="form-input w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
        type="text"
        id="email-login"
      />
    </div>
    <div class="mb-4">
      <label
        for="password-login"
        class="block text-gray-700 font-bold mb-2"
      >Password:</label>
      <input
        class="form-input w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
        type="password"
        id="password-login"
      />
    </div>
    <div>
      <button
        class="btn w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:shadow-outline"
        type="submit"
      >Login</button>
    </div>
  </form>
</div>

<script src="./js/login.js"></script>