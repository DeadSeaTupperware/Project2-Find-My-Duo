<a
  href="/"
  class="text-white px-4 py-2 border border-gray-300 absolute top-4 left-8"
>Home</a>

<div class="min-h-screen flex flex-col items-center justify-center">
  <img src="/assets/images/FindMyDuo_Logo.png" alt="Logo" class="h-32 mb-8" />

  <!-- Submission Form -->
  <form class="w-full max-w-md p-6 bg-gray-100 rounded-lg text-black shadow-md">
    <h2 class="font-bold text-3xl text-center mb-6">Submit Game</h2>
    <div class="mb-4">
      <label for="gamename" class="block text-gray-700 font-bold mb-2">Game
        Name:</label>
      <input
        class="form-input w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
        type="text"
        id="gamename"
      />
    </div>
    <div class="mb-4">
      <label
        for="releasedate"
        class="block text-gray-700 font-bold mb-2"
      >Release Date:</label>
      <input
        class="form-input w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
        type="date"
        id="releasedate"
      />
    </div>
    <div class="mb-4">
      <label
        for="description"
        class="block text-gray-700 font-bold mb-2"
      >Description:</label>
      <textarea
        class="form-textarea w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500 h-32 resize-none"
        id="description"
      ></textarea>
    </div>
    <div class="mb-4">
      <label for="coverart" class="block text-gray-700 font-bold mb-2">Cover
        Art:</label>
      <input
        class="form-input w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
        type="file"
        id="coverart"
        accept="image/*"
      />
    </div>
    <div>
      <button
        class="btn w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:shadow-outline"
        type="submit"
      >Submit Game</button>
    </div>
  </form>
</div>